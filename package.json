{
  "private": true,
  "name": "@oncarbon/ui-components-monorepo",
  "description": "Oncarbon UI components monorepo root package.json. Used mainly for scripts, not published to NPM.",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "changelog": "conventional-changelog -p angular -i ./CHANGELOG.md -k packages/ui-components -s",
    "commit": "cz",
    "dev": "turbo run dev",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --max-warnings=0 --fix",
    "prettier": "prettier . --list-different",
    "prettier:fix": "prettier . --write",
    "prepare": "husky install",
    "prerelease": "zx scripts/prerelease.mjs",
    "test": "turbo run test"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "commitizen": "4.2.4",
    "conventional-changelog-cli": "2.1.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.2.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.2",
    "husky": "7.0.4",
    "lint-staged": "11.2.6",
    "new-github-release-url": "2.0.0",
    "prettier": "2.4.1",
    "turbo": "1.4.7",
    "typescript": "4.2.4",
    "zx": "4.2.0"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,md}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "version": "0.3.0"
}
